## ETAPE 2 : CONFIGURER LE PROFIL POWERSHELL

### 2.1 Ouvrir le profil

```powershell
notepad $PROFILE
```

### 2.2 Coller ce script COMPLET

```powershell


# ============================================================
# Optimiser wp-config.php d'un site DevKinsta
# ============================================================
function devkinsta-optimize-wp {
    $siteRoot = (Get-Location).Path
    $wpConfig = Join-Path $siteRoot "wp-config.php"
    
    if (-not (Test-Path $wpConfig)) {
        Write-Host "[ERROR] wp-config.php non trouve. Place-toi a la racine du site." -ForegroundColor Red
        return
    }
    
    $content = Get-Content $wpConfig -Raw
    
    if ($content -notmatch "WP_MEMORY_LIMIT") {
        $optimizations = @"

/* === PERFORMANCE OPTIMIZATIONS === */
define( 'WP_MEMORY_LIMIT', '512M' );
define( 'WP_MAX_MEMORY_LIMIT', '512M' );
define( 'WP_CACHE', true );
define( 'CONCATENATE_SCRIPTS', true );
define( 'COMPRESS_SCRIPTS', true );
define( 'COMPRESS_CSS', true );
/* === END OPTIMIZATIONS === */

"@
        $content = $content -replace "(<\?php)", "`$1$optimizations"
        [System.IO.File]::WriteAllText($wpConfig, $content, [System.Text.UTF8Encoding]::new($false))
        Write-Host "[OK] Optimisations WordPress ajoutees" -ForegroundColor Green
    } else {
        Write-Host "[INFO] Optimisations deja presentes" -ForegroundColor Yellow
    }
}

# ============================================================
# Installateur de theme custom + Tailwind 4
# ============================================================
function devkinsta-theme-init {
    param(
        [Parameter(Mandatory = $true)]
        [string]$ThemeName
    )

    Write-Host "========================================" -ForegroundColor Cyan
    Write-Host " Initialisation theme Tailwind 4 custom" -ForegroundColor Cyan
    Write-Host "========================================" -ForegroundColor Cyan

    $siteRoot = (Get-Location).Path

    if (-not (Test-Path (Join-Path $siteRoot "wp-content"))) {
        Write-Host "[ERROR] Ce dossier ne ressemble pas a un site WordPress." -ForegroundColor Red
        Write-Host "Place-toi a la racine du site DevKinsta, ex. Z:\data\docker\volumes\DevKinsta\public\monsite" -ForegroundColor Yellow
        return
    }

    $themeSlug = ($ThemeName -replace '\s+', '-' -replace '[^a-zA-Z0-9\-]', '').ToLower()
    if (-not $themeSlug) {
        Write-Host "[ERROR] Nom de theme invalide." -ForegroundColor Red
        return
    }

    $themeFunc = ($themeSlug -replace '-', '_')
    $themesPath = Join-Path $siteRoot "wp-content\themes"
    if (-not (Test-Path $themesPath)) {
        New-Item -ItemType Directory -Path $themesPath | Out-Null
    }

