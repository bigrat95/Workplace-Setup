    if (Test-Path $themePath) {
        Write-Host "[INFO] Le dossier de theme existe deja : $themePath" -ForegroundColor Yellow
        return
    }

    Write-Host "[RUNNING] Creation du theme '$ThemeName' ($themeSlug)..." -ForegroundColor Blue
