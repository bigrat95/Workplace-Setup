    Write-Host "========================================" -ForegroundColor Cyan
    Write-Host " devkinsta-theme-init `"Nom Du Theme`"" -ForegroundColor White
    Write-Host " devkinsta-optimize-wp" -ForegroundColor White
    Write-Host "========================================" -ForegroundColor Cyan
}
```

