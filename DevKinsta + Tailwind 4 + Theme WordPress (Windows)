    <?php wp_head(); ?>
</head>
<body <?php body_class(); ?>>
<header class="p-4 bg-slate-900 text-white">
    <div class="container mx-auto">
        <h1 class="text-2xl font-bold"><?php bloginfo('name'); ?></h1>
    </div>
</header>
"@ | Out-File -FilePath "header.php" -Encoding UTF8

@"
<footer class="p-4 bg-slate-100 mt-10">
    <div class="container mx-auto text-sm">
        &copy; <?php echo date('Y'); ?> <?php bloginfo('name'); ?>
    </div>
</footer>
<?php wp_footer(); ?>
</body>
</html>
"@ | Out-File -FilePath "footer.php" -Encoding UTF8

@"
<?php
function ${themeFunc}_enqueue_assets() {
    wp_enqueue_style(
        '$themeSlug-css',
        get_stylesheet_directory_uri() . '/dist/app.css',
        array(),
        file_exists( get_stylesheet_directory() . '/dist/app.css' ) ? filemtime( get_stylesheet_directory() . '/dist/app.css' ) : null
    );
}
add_action( 'wp_enqueue_scripts', '${themeFunc}_enqueue_assets' );
"@ | Out-File -FilePath "functions.php" -Encoding UTF8

        New-Item -ItemType Directory -Path "assets\css" -Force | Out-Null

@"
@import "tailwindcss";

/* Ajoute tes styles custom ici */
"@ | Out-File -FilePath "assets\css\app.css" -Encoding UTF8

        Write-Host "[RUNNING] npm init + install tailwindcss..." -ForegroundColor Blue
        npm init -y | Out-Null
        npm install -D tailwindcss @tailwindcss/cli

@"
{
  "name": "$themeSlug",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npx @tailwindcss/cli -i ./assets/css/app.css -o ./dist/app.css --minify",
    "dev": "npx @tailwindcss/cli -i ./assets/css/app.css -o ./dist/app.css --watch"
  }
}
"@ | Out-File -FilePath "package.json" -Encoding UTF8

        New-Item -ItemType Directory -Path "dist" -ErrorAction SilentlyContinue | Out-Null

        Write-Host "[RUNNING] npm run build..." -ForegroundColor Blue
        npm run build
    }
    finally {
        Pop-Location
    }

    Write-Host "========================================" -ForegroundColor Green
    Write-Host "[OK] Theme cree dans : $themePath" -ForegroundColor Green
    Write-Host "========================================" -ForegroundColor Green
    Write-Host ""
    Write-Host "Prochaines etapes :" -ForegroundColor Yellow
    Write-Host "  1. Active le theme dans WordPress > Apparence > Themes" -ForegroundColor White
    Write-Host "  2. Pour recompiler: cd $themePath && npm run build" -ForegroundColor White
    Write-Host "  3. Pour watch mode: cd $themePath && npm run dev" -ForegroundColor White
}

# ============================================================
# Tutoriel auto
# ============================================================
$null = Switch-ToZDrive

$currentPath = (Get-Location).Path
